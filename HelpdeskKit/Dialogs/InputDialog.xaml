<Window x:Class="HelpdeskKit.Dialogs.InputDialog"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpdeskKit.Dialogs"
        mc:Ignorable="d"
        Height="126.892" Width="294.865"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Normal"
        TextElement.FontSize="13.5"
        Title="Input"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto" 
        KeyUp="Window_KeyUp">
    <StackPanel Orientation="Vertical">
        <TextBox materialDesign:HintAssist.Hint="{Binding InputLabel}"
                 Width="130" Height="30" 
                 x:Name="TextBoxInput" 
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Text="{Binding Input}"
                 Margin="10"/>
        <Button Width="80" Height="30" Click="Button_Click">
            <TextBlock Text="OK"/>
        </Button>
    </StackPanel>
</Window>
